#!/bin/bash
# List the failed tests

d="$1"
[ "$1" == "" ] && cd && d=test

{
    files=`ls $d/*.tst`
    [ -z "$files" ] && echo "ERROR: no tests found $d" && exit 1
    for f in $files
    do 
        tdiff $f  &> /dev/null
        [ -s ${f/.tst/}.diff ] && echo FAILED: ${f/.tst/}
    done
}  | tee fail

echo `wc -l  fail` tests failed
rm fail
