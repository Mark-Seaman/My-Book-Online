#!/bin/bash
# List the failed tests

d="$1"
cd $d
{
    files=`ls *.tst`
    [ "$1" != "" ] && [ -d "$d" ] && files=`ls $d/*.tst`
    for f in $files
    do 
        #echo "tdiff $f"
        [[ ! -z `tdiff $f` ]] && echo FAILED: ${f/.tst/}
    done
} | tee fail

echo `wc -l  fail` tests failed
rm fail
