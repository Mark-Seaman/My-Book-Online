#!/bin/bash
# Compare the last output with the correct output

# Go to directory
d="$1"
[ "$1" == "" ] && cd $p && d=test

# Loop over all of the tests
{
for f in $d/*.tst
do 
    x=`tdiff $f`
    [[ ! -z "$x" ]]                                             &&
    echo '----------------------------------------------------' &&
    echo "                       $f                           " &&
    echo '----------------------------------------------------' &&
    tdiff $f
done
} | less
