#!/bin/bash
# Sling slides
echo "Building slides $1 ..."

# Go to the directory
cd $p/slides

# Copy the template files
rsync -auv template/ $1 &&

# Create the presentation
cp  slides/$1/Slides $1.txt &&
cat slides/$1/Title slides/$1/Slides | template/bin/thumpSlides.py  > $1/$1.html &&
mv slide_config.js $1 

# Show the slide show
echo "Slide Show for $1"
rbg firefox $1/$1.html
