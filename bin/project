#!/bin/bash
# Start working on the simple project

export p=~/Projects/thumper

export ph=simpleapps@appthumper.com
export pa=$p/webapps/simpleapps/app
export pb=$p/bin
export pd=$p/doc
export pt=$p/test
export port=8042

alias proot="cd $p"
alias papp="cd $pa"
alias pbin="cd $pb"
alias pdoc="cd $pd"
alias ptest="cd $pt"

# Regular Path
export PATH=\
$pb:\
$pt:\
/usr/bin:\
/sbin:\
/bin:\
~/bin:\
.


# Show the banner
#reset
figlet 'App Thumper'

# Switch to directory
cd $p

# Use virtualenv
. ~/Tools/virtualenv/env27/bin/activate
