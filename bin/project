#!/bin/bash
# Start working on the simple project

export p=~/Projects/mybook
[ `hostname` == web126.webfaction.com ] && export p=~

export ph=seaman@markseaman.org
export pa=$p/webapps/mybook
export pb=$p/bin
export pd=$pa/user_doc
export pt=$p/test
export port=8054

alias proot="cd $p"
alias papp="cd $pa"
alias pbin="cd $pb"
alias pdoc="cd $pd"
alias ptest="cd $pt"

alias s=search
alias g=grep

# Regular Path
export PATH=\
$pb:\
$pt:\
/usr/bin:\
/sbin:\
/bin:\
~/bin:\
.


# Show the banner
[ 'web126.webfaction.com' == `hostname` ] && return
figlet 'My Book'

# Use virtualenv
[ -d ~/Tools/virtualenv/env27/bin ] && . ~/Tools/virtualenv/env27/bin/activate

# Switch to directory
cd $p
